extends ./module
block variables
    -let pageTitle = 'Sign Up'
block linkCSS
    link(rel="stylesheet", href="/css/signup.css")
block content
    .container
        h1 Create Account 
        form(class='signup' action="/signup" method='post')
            input(type='text', pattern="^[0-9a-zA-Z_]{3,}$", name='name', placeholder='enter your name' required)
            .msg.naming-error The field should be 3 or more character and not contain spaces or special characters 
            br
            input(type='email', name='email', placeholder='enter your email' required)
            br
            .password-container
                input.password(type='password' pattern="(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" name='password' placeholder='Enter a password' required)
                .msg.main-password-error
                br
                input.repeat-pass(type='password' placeholder='Enter the password again' required)
                .msg.repeated-password-error The password not matched
                br
            div(class='form-check')
                input(class='check' id='check' type='checkbox' required)
                lable(class='lable' for='check') accept our licence
                .msg.licence-error You must agree before submitting.
            button.submit.blue(type='submit') Sign Up
        .signup-option
            span did you have account ?
            | 
            a(href='/login') Login
        if(error)
            p(class="alert alert-danger mt-3")= error
block js 
    script(src="/js/signup.js") 